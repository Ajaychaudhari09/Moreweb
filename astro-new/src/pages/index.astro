---
import Layout from "../layouts/Layout.astro";
import { ArrowRight, Mail, BadgeDollarSign } from "lucide-react";
import NewsletterForm from "../components/NewsletterForm";
import SocialShareButtons from "../components/SocialShareButtons";
import ToolCard from "../components/ToolCard";
import BlogCard from "../components/BlogCard.astro";
import { getLatestPosts } from "../lib/posts";
import type { BlogPost } from "../types";

const recentPosts: BlogPost[] = await getLatestPosts(3);

const featuredTools = [
  {
    id: "bmi-calculator",
    name: "BMI Calculator",
    description:
      "Quickly calculate your Body Mass Index and get health insights.",
    icon: "‚öñÔ∏è",
    href: "/bmi-calculator",
  },
  {
    id: "resume-maker",
    name: "Resume Maker",
    description: "Build ATS-friendly resumes in minutes with smart templates.",
    icon: "üìÑ",
    href: "/resume-maker",
  },
  {
    id: "emi-calculator",
    name: "EMI Calculator",
    description:
      "Plan your loans easily by calculating Equated Monthly Instalments.",
    icon: "üè¶",
    href: "/emi-calculator",
  },
];

const websiteLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "MoreFusion",
  url: "https://morefusion.in/",
  potentialAction: {
    "@type": "SearchAction",
    target: "https://morefusion.in/search?q={query}",
    "query-input": "required name=query",
  },
};

const orgLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "MoreFusion",
  url: "https://morefusion.in",
  logo: "https://morefusion.in/android-chrome-512x512.png",
  sameAs: ["https://github.com/morefusion"],
};

const faqLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "What is MoreFusion?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "MoreFusion is a platform that offers free AI tools, calculators, a resume builder, and practical tech blogs to help you improve productivity and understand modern technology.",
      },
    },
    {
      "@type": "Question",
      name: "Who is MoreFusion for?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "MoreFusion is built for students, developers, creators, and professionals who want simple tools and clear explanations to make better decisions and save time.",
      },
    },
    {
      "@type": "Question",
      name: "Are the tools on MoreFusion free to use?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Yes, all the tools currently available on MoreFusion are free to use. Some future premium features may be added, but core utilities will remain free.",
      },
    },
  ],
};
---

<Layout title="MoreFusion ‚Äî Free AI Tools, Calculators & Resume Builder">
  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify(websiteLd)}
  />
  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify(orgLd)}
  />
  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify(faqLd)}
  />

  <div id="home-content" class="min-h-screen bg-background">
    {/* HERO */}
    {/* HERO - Compact & Centered (ilovepdf style) */}
    <section
      class="relative overflow-hidden border-b border-border bg-gradient-to-b from-indigo-50/50 via-white to-white dark:from-indigo-950/20 dark:via-background dark:to-background"
    >
      <div class="mx-auto max-w-5xl px-4 py-16 text-center">
        <h1
          class="mb-6 text-4xl font-extrabold tracking-tight text-foreground sm:text-5xl md:text-6xl"
        >
          MoreFusion: Free AI Tools, Calculators & <span class="text-gradient"
            >Resume Builder</span
          >
        </h1>
        <p
          class="mx-auto mb-10 max-w-2xl text-lg text-muted-foreground sm:text-xl"
        >
          Every tool you need to work smarter: Free AI tools, calculators, and
          resume builders. Simple, fast, and no sign-up required.
        </p>

        <div
          class="flex flex-col items-center justify-center gap-4 sm:flex-row"
        >
          <a
            href="/tools"
            class="btn-3d h-14 px-8 text-lg border-none shadow-lg shadow-primary/20 inline-flex items-center justify-center rounded-xl bg-primary text-primary-foreground hover:bg-primary/90 transition-transform hover:-translate-y-1"
          >
            Explore all tools
            <ArrowRight className="ml-2 h-5 w-5" />
          </a>
          <a
            href="/resume-maker"
            class="h-14 px-8 text-lg border border-border bg-background hover:bg-accent hover:text-accent-foreground inline-flex items-center justify-center rounded-xl transition-colors"
          >
            Build a Resume
          </a>
        </div>
      </div>
    </section>

    {/* POPULAR TOOLS - MOVED UP FOR IMMEDIATE VALUE */}
    <section
      aria-labelledby="featured-tools"
      class="bg-background py-16 px-4 border-b border-border"
    >
      <div class="mx-auto max-w-7xl">
        <div
          class="flex flex-col items-start justify-between gap-4 md:flex-row md:items-end mb-10"
        >
          <div>
            <h2
              id="featured-tools"
              class="text-3xl font-bold text-foreground md:text-4xl"
            >
              Popular tools on MoreFusion
            </h2>
            <p class="mt-2 text-sm text-muted-foreground md:text-base">
              Start with these frequently used tools ‚Äî they solve real problems
              in minutes.
            </p>
          </div>
          <a
            href="/tools"
            class="btn-secondary mt-2 border-border hover:bg-accent hover:text-accent-foreground inline-flex items-center justify-center rounded-md px-4 py-2"
          >
            Browse all tools
          </a>
        </div>

        <div
          class="grid gap-6 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4"
        >
          {
            featuredTools.map((tool) => (
              <div class="animate-slide-up">
                <ToolCard tool={tool} />
              </div>
            ))
          }
        </div>
      </div>
    </section>

    {/* AD CONTAINER - Middle of Homepage */}
    <div class="w-full flex justify-center py-8 bg-accent/5">
      <div id="container-08f243939922b6d9aa749c7eb572ab12"></div>
    </div>

    {/* SOCIAL PROOF / WHO IT'S FOR */}
    <section class="border-b border-border bg-accent/30">
      <div
        class="mx-auto flex max-w-7xl flex-col gap-4 px-4 py-8 text-sm text-muted-foreground md:flex-row md:items-center md:justify-between"
      >
        <p class="font-medium text-base text-center md:text-left">
          Built for{" "}
          <span class="font-bold text-foreground">
            students, developers, solo founders, creators
          </span>{" "}
          who want practical tools ‚Äî not just theory.
        </p>
        <div class="flex flex-wrap justify-center gap-3 text-xs font-semibold">
          <span
            class="rounded-full bg-blue-50 px-4 py-2 text-blue-700 dark:bg-blue-950/50 dark:text-blue-300 border border-blue-100 dark:border-blue-900"
          >
            ‚öôÔ∏è Planning & calculations
          </span>
          <span
            class="rounded-full bg-pink-50 px-4 py-2 text-pink-700 dark:bg-pink-950/50 dark:text-pink-300 border border-pink-100 dark:border-pink-900"
          >
            ü§ñ AI tools & explainers
          </span>
          <span
            class="rounded-full bg-emerald-50 px-4 py-2 text-emerald-700 dark:bg-emerald-950/50 dark:text-emerald-300 border border-emerald-100 dark:border-emerald-900"
          >
            üíº Resume & career
          </span>
        </div>
      </div>
    </section>

    {/* CORE BENEFITS */}
    <section id="benefits" class="py-24 px-4 bg-background">
      <div class="mx-auto max-w-7xl">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold md:text-4xl text-foreground">
            Why people use MoreFusion every week
          </h2>
          <p class="mt-4 text-lg text-muted-foreground">
            Clear tools + clear explanations. No noise, no paywall surprises.
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
          <div class="card-3d p-8">
            <h3 class="text-xl font-bold mb-3 text-foreground">
              Actionable, not theoretical
            </h3>
            <p class="text-muted-foreground leading-relaxed">
              Every tool and article is written so you can apply it today ‚Äî from
              EMI planning to resume tweaks and AI workflows. We focus on
              real-world utility over abstract concepts.
            </p>
          </div>

          <div class="card-3d p-8">
            <h3 class="text-xl font-bold mb-3 text-foreground">
              Fast, mobile-friendly tools
            </h3>
            <p class="text-muted-foreground leading-relaxed">
              Designed for phones and laptops. Lightweight pages keep Core Web
              Vitals in good shape, ensuring you get answers quickly even on
              slow connections.
            </p>
          </div>

          <div class="card-3d p-8">
            <h3 class="text-xl font-bold mb-3 text-foreground">
              Content you can trust
            </h3>
            <p class="text-muted-foreground leading-relaxed">
              Honest breakdowns of tools, practical checklists, and no fake
              ‚Äúhype list‚Äù articles. We verify everything we publish to ensure
              accuracy and relevance.
            </p>
          </div>
        </div>
      </div>
    </section>

    {/* LATEST BLOG POSTS + SPONSORED / NEWSLETTER */}
    <section aria-labelledby="latest-insights" class="py-24 px-4 bg-accent/10">
      <div class="mx-auto max-w-7xl">
        <div
          class="flex flex-col justify-between gap-4 md:flex-row md:items-end"
        >
          <div>
            <h2
              id="latest-insights"
              class="text-3xl font-bold gradient-text md:text-4xl"
            >
              Latest tech & productivity insights
            </h2>
            <p class="mt-2 text-sm text-muted-foreground md:text-base">
              Short, focused articles about AI tools, coding, buying decisions
              and real workflow upgrades.
            </p>
          </div>
          <a
            href="/blog"
            class="btn-secondary mt-2 border-border hover:bg-accent hover:text-accent-foreground inline-flex items-center justify-center rounded-md px-4 py-2"
          >
            View all posts
            <ArrowRight className="ml-2 h-4 w-4" />
          </a>
        </div>

        <div
          class="mt-8 grid gap-10 lg:grid-cols-[minmax(0,2fr)_minmax(0,1fr)]"
        >
          {/* Blog cards */}
          <div>
            {
              recentPosts.length === 0 ? (
                <p class="text-sm text-muted-foreground">
                  No blog posts yet. New guides are coming soon.
                </p>
              ) : (
                <div class="grid gap-6 md:grid-cols-2">
                  {recentPosts.map((post) => (
                    <div class="animate-slide-up">
                      <BlogCard post={post} />
                    </div>
                  ))}
                </div>
              )
            }
          </div>

          {/* Sidebar: newsletter + sponsored */}
          <aside class="space-y-8">
            <div
              class="rounded-2xl bg-gradient-to-br from-indigo-900 via-indigo-800 to-slate-900 p-6 text-white shadow-xl ring-1 ring-white/10"
            >
              <div class="flex items-center gap-3">
                <div
                  class="flex h-10 w-10 items-center justify-center rounded-xl bg-white/20 backdrop-blur-sm"
                >
                  <Mail className="h-5 w-5 text-white" />
                </div>
                <h3 class="text-lg font-bold text-white tracking-wide">
                  Stay ahead without doomscrolling
                </h3>
              </div>
              <p
                class="mt-3 text-sm text-indigo-100/90 leading-relaxed font-medium"
              >
                Get short, practical updates when we publish new tools and
                explainers. No spam, no daily noise.
              </p>
              <div class="mt-4">
                <div
                  class="[&_input]:border-white/30 [&_input]:bg-white/10 [&_input]:text-white [&_input]:placeholder-indigo-200/70 [&_button]:bg-white [&_button]:text-indigo-700 [&_button]:hover:bg-indigo-50 [&_button]:font-bold [&_button]:shadow-lg"
                >
                  <NewsletterForm client:visible />
                </div>
              </div>
            </div>

            <div class="rounded-2xl border border-border bg-card p-5">
              <div class="flex items-center gap-2">
                <BadgeDollarSign className="h-4 w-4 text-muted-foreground" />
                <h3
                  class="text-xs font-semibold uppercase tracking-wider text-muted-foreground"
                >
                  Sponsored
                </h3>
              </div>
              <p class="mt-2 text-xs text-muted-foreground">
                Ads help keep MoreFusion free for everyone.
              </p>
              {/* Ad placeholder can go here if needed */}
            </div>
          </aside>
        </div>
      </div>
    </section>

    {/* NEW: ABOUT / MISSION SECTION (SEO Content - Expanded) */}
    <section class="py-24 px-4 bg-background border-y border-border">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="text-3xl font-bold md:text-4xl mb-8 text-foreground">
          What is MoreFusion?
        </h2>
        <div
          class="space-y-8 text-lg text-muted-foreground leading-relaxed text-justify md:text-center"
        >
          <p>
            In a world overflowing with complex software and endless
            subscriptions, <strong>MoreFusion</strong> stands for simplicity. We believe
            that the tools you use every day should be fast, free, and accessible
            to everyone‚Äîwhether you're a student calculating your grades, a developer
            formatting JSON, or a founder building a resume. We strip away the clutter
            to focus on what matters: solving your problem efficiently.
          </p>
          <p>
            Our mission is to bridge the gap between <em>utility</em> and <em
              >knowledge</em
            >. We don't just give you a black box; we explain how things work.
            From understanding how your BMI is calculated to learning the logic
            behind an EMI schedule, we empower you with information. This
            educational approach ensures that you not only get the result you
            need but also understand the context behind it, leading to better
            decision-making in your personal and professional life.
          </p>
          <div
            class="bg-card p-8 rounded-2xl border border-border text-left mt-8"
          >
            <h3 class="text-xl font-bold mb-4 text-foreground text-center">
              Who is this for?
            </h3>
            <ul class="grid gap-4 sm:grid-cols-2">
              <li class="flex items-start gap-3">
                <span
                  class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-blue-100 text-blue-600 text-xs font-bold"
                  >‚úì</span
                >
                <span
                  ><strong>Students</strong> needing quick calculators and study aids.</span
                >
              </li>
              <li class="flex items-start gap-3">
                <span
                  class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-purple-100 text-purple-600 text-xs font-bold"
                  >‚úì</span
                >
                <span
                  ><strong>Developers</strong> looking for formatters, converters,
                  and tech guides.</span
                >
              </li>
              <li class="flex items-start gap-3">
                <span
                  class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-pink-100 text-pink-600 text-xs font-bold"
                  >‚úì</span
                >
                <span
                  ><strong>Creators</strong> building assets and optimizing workflows.</span
                >
              </li>
              <li class="flex items-start gap-3">
                <span
                  class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-emerald-100 text-emerald-600 text-xs font-bold"
                  >‚úì</span
                >
                <span
                  ><strong>Solo Founders</strong> managing finances and documents.</span
                >
              </li>
            </ul>
          </div>
          <div class="flex flex-col items-center pt-8">
            <p class="text-sm font-medium text-muted-foreground mb-4">
              Find this useful? Share it with your network:
            </p>
            <SocialShareButtons
              title="MoreFusion ‚Äî Free AI Tools & Calculators"
              url="https://morefusion.in"
            />
          </div>
        </div>
      </div>
    </section>

    {/* FAQ SECTION */}
    <section
      aria-labelledby="home-faq-heading"
      class="border-t border-border bg-accent/10 py-24 px-4"
    >
      <div class="mx-auto max-w-4xl">
        <h2
          id="home-faq-heading"
          class="text-center text-3xl font-bold gradient-text md:text-4xl"
        >
          Frequently asked questions
        </h2>
        <p class="mt-2 text-center text-sm text-muted-foreground">
          A quick overview before you dive into the tools and articles.
        </p>

        <div class="mt-8 space-y-4">
          <details class="group rounded-lg border border-border bg-card p-4">
            <summary
              class="flex cursor-pointer list-none items-center justify-between text-sm font-medium text-foreground"
            >
              What can I do with MoreFusion?
              <span
                class="ml-4 text-xl leading-none text-muted-foreground group-open:rotate-90 transition-transform"
              >
                ‚Ä∫
              </span>
            </summary>
            <p class="mt-3 text-sm text-muted-foreground leading-relaxed">
              MoreFusion is your all-in-one productivity hub. You can calculate
              your Body Mass Index (BMI) to track health goals, plan your
              finances with our EMI calculator, and create professional,
              ATS-friendly resumes in minutes. Beyond tools, we provide clear,
              jargon-free explainers on the latest AI tools and coding concepts,
              helping you stay ahead in the tech world without getting
              overwhelmed.
            </p>
          </details>

          <details class="group rounded-lg border border-border bg-card p-4">
            <summary
              class="flex cursor-pointer list-none items-center justify-between text-sm font-medium text-foreground"
            >
              Is any login or payment required?
              <span
                class="ml-4 text-xl leading-none text-muted-foreground group-open:rotate-90 transition-transform"
              >
                ‚Ä∫
              </span>
            </summary>
            <p class="mt-3 text-sm text-muted-foreground leading-relaxed">
              No, absolutely not. We believe in removing barriers to
              productivity. You can use all our calculators, the resume builder,
              and read every article without creating an account or paying a
              cent. We are committed to keeping our core utilities free and
              accessible to everyone, from students to professionals.
            </p>
          </details>

          <details class="group rounded-lg border border-border bg-card p-4">
            <summary
              class="flex cursor-pointer list-none items-center justify-between text-sm font-medium text-foreground"
            >
              How often is new content added?
              <span
                class="ml-4 text-xl leading-none text-muted-foreground group-open:rotate-90 transition-transform"
              >
                ‚Ä∫
              </span>
            </summary>
            <p class="mt-3 text-sm text-muted-foreground leading-relaxed">
              We update MoreFusion weekly. Our team constantly researches the
              latest AI tools, software updates, and productivity techniques to
              bring you fresh, relevant content. Whether it's a review of a new
              AI image generator or a guide on optimizing your coding workflow,
              you can expect regular updates that provide real value.
            </p>
          </details>

          <details class="group rounded-lg border border-border bg-card p-4">
            <summary
              class="flex cursor-pointer list-none items-center justify-between text-sm font-medium text-foreground"
            >
              Can I suggest a tool or topic?
              <span
                class="ml-4 text-xl leading-none text-muted-foreground group-open:rotate-90 transition-transform"
              >
                ‚Ä∫
              </span>
            </summary>
            <p class="mt-3 text-sm text-muted-foreground leading-relaxed">
              Yes! We build for our community. If there is a specific calculator
              you need, an AI tool you want reviewed, or a tech concept you find
              confusing, let us know via our contact page. We prioritize
              building tools and writing guides that solve actual problems for
              our users.
            </p>
          </details>
        </div>
      </div>
    </section>
  </div>
</Layout>
