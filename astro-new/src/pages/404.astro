---
import Layout from "../layouts/Layout.astro";
import { Button } from "@/components/ui/button";
import { FileQuestion } from "lucide-react";

---

<Layout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center min-h-[70vh] px-4 text-center">
    <div class="bg-slate-100 dark:bg-slate-800 p-6 rounded-full mb-6">
      <FileQuestion className="h-16 w-16 text-slate-400" />
    </div>
    <h1 class="text-4xl font-bold mb-4 gradient-text">Page Not Found</h1>
    <p class="text-lg text-muted-foreground max-w-md mb-8">
      The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
    </p>
    <div class="flex gap-4">
      <a href="/" class="btn-primary flex items-center gap-2 px-6 py-3 rounded-lg">
        Go Home
      </a>
      <a href="/tools" class="btn-secondary flex items-center gap-2 px-6 py-3 rounded-lg border border-border">
        View Tools
      </a>
    </div>
  </div>
</Layout>
