---
import Layout from "../../layouts/Layout.astro";
import BlogClient from "../../components/BlogClient";
import NewsletterForm from "../../components/NewsletterForm";
import { getAllPosts } from "../../lib/posts";

const allPosts = await getAllPosts();

const title = "Blog | MoreFusion";
const description = "Expert insights on AI, coding, productivity, film, drama, lifestyle, and technology. High-quality content for students, professionals, and creators.";
---

<Layout title={title} description={description}>
  <div class="bg-slate-50 dark:bg-slate-950 py-12 sm:py-20 border-b border-slate-200 dark:border-slate-800">
    <div class="container mx-auto px-4 max-w-4xl text-center">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold tracking-tight text-slate-900 dark:text-white mb-6">
        The MoreFusion <span class="text-blue-600">Blog</span>
      </h1>
      <p class="text-lg sm:text-xl text-slate-600 dark:text-slate-400 leading-relaxed max-w-2xl mx-auto">
        Expert insights on AI, coding, productivity, and technology. 
        Practical guides to help you work smarter, not harder.
      </p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-12 max-w-7xl">
    <BlogClient client:load initialPosts={allPosts} categories={["AI", "coding", "drama", "film", "general", "shopping"]} />
  </div>

  <section class="bg-blue-600 dark:bg-blue-900 py-16 px-4">
    <div class="container mx-auto max-w-4xl text-center text-white">
      <h2 class="text-3xl font-bold mb-4">Stay updated with our latest tools & guides</h2>
      <p class="text-blue-100 mb-8 text-lg">Join 10,000+ subscribers getting weekly productivity tips.</p>
      <div class="max-w-md mx-auto bg-white/10 p-6 rounded-2xl backdrop-blur-sm border border-white/20">
         <NewsletterForm client:visible />
      </div>
    </div>
  </section>
</Layout>
