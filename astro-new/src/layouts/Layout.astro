---
import "@/styles/global.css";
import Header from "../components/Header";
import Footer from "../components/Footer";

import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  image?: string;
  updatedDate?: Date | string;
}

const { 
  title, 
  description = "MoreFusion offers free online productivity tools including BMI Calculator, EMI Calculator, and Resume Maker. Boost efficiency with our simple, fast utilities.",
  image = "/android-chrome-192x192.png",
  updatedDate
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#4f46e5" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="alternate" hreflang="en" href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={canonicalURL} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    </noscript>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-MEASUREMENT_ID"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(...args) { window.dataLayer.push(args); }
      gtag('js', new Date());

      gtag('config', 'G-MEASUREMENT_ID');
    </script>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    {updatedDate && <meta property="og:updated_time" content={new Date(updatedDate).toISOString()} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Ads -->
    <script async="async" data-cfasync="false" src="//pl28064811.effectivegatecpm.com/08f243939922b6d9aa749c7eb572ab12/invoke.js"></script>
  </head>
  <body class="bg-background text-foreground antialiased min-h-screen flex flex-col font-sans selection:bg-primary/20 selection:text-primary overflow-x-hidden">
    <Header client:load pathname={Astro.url.pathname} />
    <main class="flex-1 w-full animate-fade-in container-responsive py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
